<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.priscy.eva1_prac2_esperanza_de_vida.Principal">

    <LinearLayout
        android:layout_width="368dp"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        tools:layout_editor_absoluteX="8dp"
        tools:layout_editor_absoluteY="8dp">

        <TextView
            android:id="@+id/lblNac"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Año de Nacimiento:" />

        <EditText
            android:id="@+id/txtNac"
            android:layout_width="198dp"
            android:layout_height="wrap_content"
            android:ems="10"
            android:hint="Introduzca el año de nacimiento"
            android:inputType="integer" />
    </LinearLayout>

    <TextView
        android:id="@+id/lblReg"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Región de Nacimiento:"
        tools:layout_editor_absoluteX="16dp"
        tools:layout_editor_absoluteY="61dp" />

    <RadioGroup
        android:id="@+id/rdGrpReg"
        android:layout_width="368dp"
        android:layout_height="0dp"
        tools:layout_editor_absoluteX="8dp"
        tools:layout_editor_absoluteY="103dp">

        <RadioButton
            android:id="@+id/rdRegDes"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Regiones Desarrolladas"
            android:onClick="rbRegionClick"/>

        <RadioButton
            android:id="@+id/rdAmeLat"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="America Latina"
            android:onClick="rbRegionClick"/>

        <RadioButton
            android:id="@+id/rdAsi"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Asia"
            android:onClick="rbRegionClick"/>

        <RadioButton
            android:id="@+id/rdAfr"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="RadioButton"
            android:onClick="rbRegionClick"/>
    </RadioGroup>

    <TextView
        android:id="@+id/lblGen"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Genero"
        tools:layout_editor_absoluteX="16dp"
        tools:layout_editor_absoluteY="238dp" />

    <LinearLayout
        android:layout_width="368dp"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        tools:layout_editor_absoluteX="8dp"
        tools:layout_editor_absoluteY="278dp">

        <RadioButton
            android:id="@+id/rdHom"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Hombre"
            android:onClick="rbGeneroClick"/>

        <RadioButton
            android:id="@+id/rdMuj"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Mujer"
            android:onClick="rbGeneroClick"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="368dp"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        tools:layout_editor_absoluteX="8dp"
        tools:layout_editor_absoluteY="337dp">

        <TextView
            android:id="@+id/lblVid"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Expectativa de vida:" />

        <TextView
            android:id="@+id/lblRes"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="368dp"
        android:layout_height="0dp"
        android:orientation="horizontal"
        tools:layout_editor_absoluteX="8dp"
        tools:layout_editor_absoluteY="386dp">

        <TextView
            android:id="@+id/lblDec"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Fecha Probable de Deceso:" />

        <TextView
            android:id="@+id/lblFall"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1" />
    </LinearLayout>

</android.support.constraint.ConstraintLayout>
